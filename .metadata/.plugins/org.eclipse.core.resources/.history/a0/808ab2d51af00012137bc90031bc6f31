#include <windows.h>
#include <stdio.h>
#include <GL/gl.h>
#include <GL/glut.h>

GLfloat fore[4] , back[4];

void printColor(GLenum pname){
	GLfloat params[4];
	glGetFloatv(pname, params);
	printf("(%f,%f,%f,%f)\n", params[0], params[1], params[2], params[3]);
}

void disp( void ) {
	glClearColor(0 , 0 , 0 , 0);
	glClear(GL_COLOR_BUFFER_BIT);

	glColor3fv(fore);
	glBegin(GL_TRIANGLES);
		glVertex2f(0 , -0.9);
		glVertex2f(-0.9 , 0.9);
		glVertex2f(0.9 , 0.9);
	glEnd();

	printColor(GL_CURRENT_COLOR);
	printColor(GL_COLOR_CLEAR_VALUE);
//	(1.000000,1.000000,1.000000,1.000000) <- GL_CURRENT_COLOR(1)
//	(0.000000,0.000000,0.000000,0.000000) <- GL_COLOR_CLEAR_VALUE(1)
//	(0.000000,0.000000,0.000000,1.000000) <- GL_CURRENT_COLOR(2)
//	(1.000000,1.000000,1.000000,1.000000) <- GL_COLOR_CLEAR_VALUE(2)

	glutSwapBuffers();
}

int main(int argc , char ** argv) {
	glutInit(&argc , argv);
	glutInitWindowPosition(100 , 50);
	glutInitWindowSize(400 , 300);
	glutInitDisplayMode(GLUT_DOUBLE | GLUT_RGBA);

	glutCreateWindow("Kitty on your lap");
	glutDisplayFunc(disp);

	printColor(GL_CURRENT_COLOR);
	printColor(GL_COLOR_CLEAR_VALUE);

	glutMainLoop();
	return 0;
}
