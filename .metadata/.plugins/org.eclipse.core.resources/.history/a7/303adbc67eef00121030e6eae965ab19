#include <windows.h>
#include <stdio.h>
#include <GL/glut.h>
#include <GL/gl.h>

void disp(void) {
	glClear(GL_COLOR_BUFFER_BIT);
	glBegin(GL_TRIANGLES);
	glVertex2f(0, 0);
	glVertex2f(-1, 0.9);
	glVertex2f(1, 0.9);
	glVertex2f(0, 0);
	glVertex2f(-1, -0.9);
	glVertex2f(1, -0.9);
	glEnd();
	glutSwapBuffers();
}
int main(int argc, char ** argv) {
	glutInit(&argc, argv);
	glutInitWindowPosition(100, 50);
	glutInitWindowSize(500, 500);
	glutInitDisplayMode(GLUT_DOUBLE | GLUT_RGBA);
	glutCreateWindow("Kitty on your lap");
	glutDisplayFunc(disp);
	glutMainLoop();
	return 0;
}

