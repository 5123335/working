#include <windows.h>
#include <GL/gl.h>
#include <GL/glut.h>

void vertexWithEdgeFlag(GLboolean flag, GLfloat x, GLfloat y) {
	glEdgeFlag(flag);
	glVertex2f(x, y);
}

void disp(void) {
	// glEdgeFlag\(GL_(TRUE|FALSE)\);\r?\n\s+glVertex2f\((.*),(.*)\)
	// -> vertexWithEdgeFlag(GL_$1, $2, $3)

	glClear(GL_COLOR_BUFFER_BIT);
	glBegin(GL_POLYGON);
	vertexWithEdgeFlag(GL_TRUE, -0.9, -0.5);
	vertexWithEdgeFlag(GL_TRUE, -0.85,  0.9);
	vertexWithEdgeFlag(GL_TRUE, 0,  0.3);
	vertexWithEdgeFlag(GL_TRUE, -0.9,  -0.5);
	vertexWithEdgeFlag(GL_FALSE, 0.9,  -0.5);
	vertexWithEdgeFlag(GL_TRUE, 0,  0.3);
	vertexWithEdgeFlag(GL_TRUE, 0.85,  0.9);
	vertexWithEdgeFlag(GL_FALSE, 0.9,  -0.5);
	vertexWithEdgeFlag(GL_FALSE, 0,  0.3);
	glEnd();
	glutSwapBuffers();
}
int main(int argc, char ** argv) {
	glutInit(&argc, argv);
	glutInitWindowPosition(100, 50);
	glutInitWindowSize(400, 300);
	glutInitDisplayMode(GLUT_DOUBLE | GLUT_RGBA);
	glutCreateWindow("Kitty on your lap");
	glutDisplayFunc(disp);
	glutMainLoop();
	return 0;
}
