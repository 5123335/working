#include <windows.h>
#include <stdio.h>
#include <GL/gl.h>
#include <GL/glut.h>

int pointSize = 10;  // ‚±‚±‚ð•Ï‚¦‚é‚Æ“_‚Ì‘å‚«‚³(px)‚ª•Ï‚í‚é

void disp(void) {
	glClear(GL_COLOR_BUFFER_BIT);

	glPointSize(pointSize);
	glBegin(GL_POINTS);
	glVertex2f(0, -0.9);
	glVertex2f(-0.9, 0.9);
	glVertex2f(0.9, 0.9);
	glEnd();

	glutSwapBuffers();
}

int main(int argc, char ** argv) {
	if (argc >= 2)
		sscanf(argv[1], "%d", &pointSize);

	glutInit(&argc, argv);
	glutInitWindowPosition(100, 50);
	glutInitWindowSize(400, 300);
	glutInitDisplayMode(GLUT_DOUBLE | GLUT_RGBA);

	glutCreateWindow("Kitty on your lap");
	glutDisplayFunc(disp);

	glutMainLoop();
	return 0;
}
